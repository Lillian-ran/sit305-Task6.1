<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00BFFF"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Hello,"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/usernameText"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Yourname"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/taskNotification"
            android:text="✅ You have 1 task due"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="#88FFF7"
            android:padding="8dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/taskCard"
            android:orientation="vertical"
            android:background="#3399FF"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:layout_below="@id/taskNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/taskTitle"
                android:text="Generated Task 1(Test version)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/taskDescription"
                android:text="Small description about task"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/enterTaskButton"
                android:text="➡"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>